<div id="comments">
  <%= comment.content %><br>
  <%= "by: #{User.find(comment.user_id).email}" %>
  <% if comment.user_id == current_user.id %>
    <%= button_to "Delete Comment", post_comment_path(comment.post_id, comment.id), method: :delete, data: { turbo_frame: "_top" } %>
    <%= link_to "Edit Comment", edit_post_comment_path(comment.post_id, comment.id) %>
  <% end %>
</div>