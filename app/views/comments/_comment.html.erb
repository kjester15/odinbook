<div id="comments">
  <% post.comments.each do |comment| %>
    <%= turbo_frame_tag comment do %>
      <%= comment.content %><br>
      <%= "by: #{User.find(comment.user_id).email}" %>
      <% if comment.user_id == current_user.id %>
        <%= button_to "Delete Comment", post_comment_path(post_id, comment.id), method: :delete, data: { turbo_frame: "_top" } %>
        <%= link_to "Edit Comment", edit_post_comment_path(post_id, comment.id) %>
      <% end %>
    <% end %>
    <br><br>
  <% end %>
</div>