<div class="page-container">
  <div class="user-info">
    <div>
      <%= image_tag "#{@user.image}", style: 'height:50px;width:50px' %>
    </div>
    <div>
      <%= @user.username %>
    </div>
    <div>
      <%= link_to "#{@user.followers.count} followers", follows_path %>
    </div>
    <div>
      <%= link_to "following #{@user.followees.count}", follows_path %>
    </div>
    <div>
      <%= link_to "Edit Profile", edit_user_registration_path(current_user) %>
    </div>
  </div>
  <div class="user-posts">
    <%= render @posts %>
  </div>
</div>